@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
@Html.Hidden("hhdnPerfilUser", ViewData["LOGUEO_PERFIL"])

<script src="~/Scripts/Documentos/Usuario/index.js"></script>

<div class="page-title">
    <div class="title_left">
        <h3>Usuarios</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/binoculars.svg" alt="" height="19" width="19" /></i>Campos de búsqueda
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form id="frmBusqueda" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-bodyBuscar">
                        <div class="form-row">
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label>
                                    Usuario
                                </label>
                                <input type='text' class="form-control" id="usuario" name="usuario" />
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label>
                                    Descripción
                                </label>
                                <input type='text' class="form-control" id="descripcionFiltro" name="descripcionFiltro" />
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label>
                                    Estado
                                </label>
                                @Html.DropDownList("hddlEstadoUsuario", (SelectList)ViewBag.EstadoUsuario, new { @class = "form-control", Id = "hddlEstadoUsuario" })
                            </div>
                        </div>
                        <div class="row"></div>
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-group col-md-5 col-sm-5 col-xs-12">
                                    <button id="btnConsultar" type="button" class="btn btn-primary">Consultar</button>
                                    <button id="hbtnExcel" type="button" OnClick="location.href='@Url.Action("ExportarExcel", "Usuario")'" class="btn grey-gallery">Exportar a Excel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <button id="btnNuevo" type="button" class="btn btn-success">Nuevo</button>
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/perfil.svg" alt="" height="19" width="19" /></i>Listado de Eventos
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div><p id="cantidadRegistros" value=""></p></div>
                <div class="form-group" id="Resultados">
                    <table id="tblUsuario" class="table table-striped table-bordered dt-responsive nowrap" cellpadding="0" width="100%">
                    </table>
                </div>
                <div id="BotoneraPerfil">
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*Modal*@
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <center><h4 id="modalTitle">Editar Usuario</h4></center>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="row" id="divIdUsuario">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Id</label>
                                    <input type='text' class="form-control" id="idUsuario" disabled name="idUsuario" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Usuario</label>
                                    <input type='text' class="form-control" id="usuarioLogin" disabled name="usuarioLogin" />
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Nombre</label>
                                    <input type='text' class="form-control" id="firstName" name="firstName" />
                                </div>
                            </div>
                            <div></div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Apellido</label>
                                    <input type='text' class="form-control" id="lastName" name="lastName" />
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Descripción</label>
                                    <input type='text' class="form-control" id="descripcion" name="descripcion" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Correo</label>
                                    <input type='text' class="form-control" id="userEmail" name="userEmail" />
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label>Grupo</label>
                                    @Html.DropDownList("hddlIdGrupo", (SelectList)ViewBag.ListGrupo, new { @class = "form-control", Id = "hddlIdGrupo" })
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col text-center">
                    <button id="btnGuardarModal" type="button" class="btn btn-success">Grabar</button>
                    <button id="btnCancelarPopUP" type="button" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
