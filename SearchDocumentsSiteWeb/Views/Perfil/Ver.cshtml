@model SearchDocuments.Entidades.PerfilEL
@{
    ViewBag.Title = "Ver Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Documentos/Perfil/Ver.js"></script>
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
<br />
<br />

<div class="page-title">
    <div class="title_left">
        <h3>Perfil</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/ver.png" alt="" height="19" width="19" /></i>Ver Registro

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("Ver", "Perfil", FormMethod.Post, new { id = "frmVer", name = "frmVer", @class = "form-horizontal" }))
                {
                    <div class="form-row">
                        <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        </div>
                        <div class="form-group col-md-4 col-sm-4 col-xs-12">
                            <label>
                                @Html.LabelFor(m => m.PERFIL_ID) <span class="required">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.PERFIL_ID, new { @class = "form-control", Id = "htxtIdPerfil", readOnly = "readonly" })
                        </div>
                        <div class="form-group col-md-4 col-sm-4 col-xs-12">
                        </div>
                        <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        </div>
                    </div>

                    <div class="row">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        </div>
                        <div class="form-group col-md-4 col-sm-4 col-xs-12">
                            <label>
                                @Html.LabelFor(m => m.PERFIL_NOMBRE) <span class="required">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.PERFIL_NOMBRE, new { @class = "form-control col-md-7 col-xs-12", Id = "htxtNombreRol", onkeypress = "return soloLetrasyNumeros(event)", readOnly = "readonly" })
                            @Html.ValidationMessageFor(model => model.PERFIL_NOMBRE)
                        </div>
                        <div class="form-group col-md-4 col-sm-4 col-xs-12">
                            <label>
                                @Html.LabelFor(m => m.DESCRIPCION) <span class="required">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.DESCRIPCION, new { @class = "form-control col-md-7 col-xs-12", Id = "htxtDescripcion", onkeypress = "return soloLetrasyNumeros(event)", readOnly = "readonly" })
                            @Html.ValidationMessageFor(model => model.DESCRIPCION)
                        </div>
                        <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        </div>
                    </div>

                    <div class="row">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        </div>
                        <div class="form-group col-md-4 col-sm-4 col-xs-12">

                        </div>
                    </div>

                    <div class="row">
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                            <button id="btnCancelar" class="btn btn-primary" type="button">Cerrar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

