@{
    ViewBag.Title = "Configuración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- JAVASCRIPT -->
<script src="~/Scripts/Documentos/Perfil/PlantillaPerfil.js"></script>
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
<br />
<br />
<!-- BARRA UBICACION -->

<div class="page-title">
    <div class="title_left">
        <h3>Perfiles</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/binoculars.svg" alt="" height="19" width="19" /></i>Perfil

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @(Html.Hidden("hhdnIdPerfil", ViewData["intIdCodigoPerfil"], new { id = "hhdnIdPerfil" }))
                <form id="frmBusqueda" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-bodyBuscar">
                        <div class="form-group">
                            <label class="control-label col-md-1" for="htxtPerfil">Perfil </label>
                            <div class="col-md-3">
                                @Html.TextBox("htxtPerfil", ViewData["strNombrePerfil"], new { @class = "form-control", onkeypress = "return soloLetrasYNumerosPunto(event)", maxlength = "60", readOnly = "readOnly" })
                            </div>
                            <div class="col-md-2">

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="x_panel">
        <div class="x_title" style="font-size:14px">
            <i><img src="~/Content/images/icons-flat/perfil.svg" alt="" height="19" width="19" /></i>Configuración
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <form method="POST" id="form_sample_4" class="form-horizontal" action="#">
                <div class="form-body">
                    <!-- TABLA -->
                    <div class="form-group">
                        <div class="col-md-6">
                            <b>Todas las Plantillas</b>

                            <table id="tblPlantillas" class="table table-striped table-bordered dt-responsive nowrap" cellpadding="0" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <b>Accesos Actuales</b>

                            <table id="tblPlantillasActuales" class="table table-striped table-bordered dt-responsive nowrap" cellpadding="0" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- FIN TABLA -->
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-12">
                            <button id="hbtnGuardar" type="button" class="btn btn-success">Guardar</button>
                            <button id="hbtnCancelar" type="button" class="btn btn-primary">Cerrar</button>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>