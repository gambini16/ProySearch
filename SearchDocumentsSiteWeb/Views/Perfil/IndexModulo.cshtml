@{
    ViewBag.Title = "Módulos por Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- JAVASCRIPT -->
<script src="~/Scripts/Documentos/Perfil/IndexModulo.js"></script>
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
<br />
<br />
<!-- BARRA UBICACION -->

<div class="page-title">
    <div class="title_left">
        <h3>Perfiles</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/binoculars.svg" alt="" height="19" width="19" /></i>Campos de búsqueda
                <ul class="nav navbar-right panel_toolbox">

                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" style="display:none">
                <form id="frmBusqueda" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-bodyBuscar">
                        <div class="form-group">
                            <label class="control-label col-md-1" for="htxtPerfil">Perfil</label>
                            <div class="col-md-3">
                                @Html.TextBox("htxtPerfil", null, new { @class = "form-control", onkeypress = "return soloLetrasYNumerosPunto(event)", maxlength = "60" })
                            </div>
                            <div class="col-md-1">
                                <button id="btnConsultar" type="button" class="btn btn-primary">Consultar</button>
                            </div>
                            <div class="col-md-2">
                                <button id="hbtnExcel" type="button" OnClick="location.href='@Url.Action("ExportarExcelModuloPerfil", "Perfil")'" class="btn grey-gallery">Exportar a Excel</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="x_panel">
        <div class="x_title" style="font-size:14px">
            <i><img src="~/Content/images/icons-flat/perfil.svg" alt="" height="19" width="19" /></i>Listado de Perfiles
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="form-group">
                <table id="tblPerfilesModulo" class="table table-striped table-bordered dt-responsive nowrap" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div id="BotoneraPerfil">
                <div class="row">
                    <div class="col-md-12">

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>