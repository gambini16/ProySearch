@{
    ViewBag.Title = "Consulta Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- JAVASCRIPT -->
<script src="~/Scripts/Documentos/Documento/Index.js"></script>
<script src="~/Scripts/Documentos/ImportarDocumento/Index.js"></script>
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
@Html.Hidden("hhdnPerfilUser", ViewData["LOGUEO_PERFIL"])


<input type="hidden" value="@ViewBag.hdnViewPdf" id="hidViewPdf" />
<input type="hidden" value="@ViewBag.hidIdUser" id="hidIdUser" />

<br />
<br />
<!-- BARRA UBICACION -->

<div class="page-title">
    <div class="title_left">
        <h3>Consulta de Documentos</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/binoculars.svg" alt="" height="19" width="19" /></i>Campos de búsqueda
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form id="frmBusqueda" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <label for="hddlTipoDocumento">PLANTILLA</label>
                                @Html.DropDownList("hddlTipoDocumento", (SelectList)ViewBag.TipoDocumento, new { @class = "form-control" })
                            </div>
                        </div>
                        <div id="Parametros">

                        </div>
                    </div>
                </form>
            </div>
            <div class="x_title" style="font-size:14px">
                <div class="clearfix"></div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button id="btnConsultar" type="button" class="btn btn-primary">Consultar</button>
                    <button id="btnLimpiar" type="button" class="btn btn-success">Limpiar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="x_panel">
        <div class="x_title" style="font-size:14px">
            <i><img src="~/Content/images/icons-flat/perfil.svg" alt="" height="19" width="19" /></i>Listado de Documentos
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="form-group" id="Resultados">
                <table id="tblDocumentos" class="table table-striped table-bordered dt-responsive nowrap" cellpadding="0" width="100%"></table>
            </div>
            <div id="BotoneraPerfil">
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <center><h4 id="ModalTitle">Editar Documento</h4></center>
            </div>
            <input type="hidden" id="hiddenModalTocId" name="hiddenModalTocId" value="" />
            <div class="modal-body" style="margin:30px;">
                <form>
                    <div class="row" id="EditarDocumento">
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-sm-1 col-xs-12">
                            <input type="checkbox" id="chkUploadEdit" class="form-check-input" style="height:60px;position:relative" value="">
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <label>Archivo</label>
                            <input type="file" name="fileUploadEdit" id="fileUploadEdit" accept="application/pdf">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnGuardarModal" type="button" class="btn btn-success">Grabar</button>
                <button id="btnCancelarPopUP" type="button" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
            </div>
        </div>
    </div>
</div>
