@{
    ViewBag.Title = "Imnportar Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- JAVASCRIPT -->
<script src="~/Scripts/Documentos/ImportarDocumento/Index.js"></script>
@Html.Hidden("hhdnOpcionesAcceso", ViewData["OPCIONES_USUARIO"])
@Html.Hidden("hhdnPerfilUser", ViewData["LOGUEO_PERFIL"])

<br />
<br />
<!-- BARRA UBICACION -->

<div class="page-title">
    <div class="title_left">
        <h3>Importar Documentos</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">

            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title" style="font-size:14px">
                <i><img src="~/Content/images/icons-flat/folder-9.svg" alt="" height="19" width="19" /> </i>Importar de Directorio
                <ul class="nav navbar-right panel_toolbox">

                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <form id="frmBusqueda" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-bodyBuscar">
                        <div class="form-group">
                            <label class="control-label col-md-1" for="hddlTipoDocumento">Plantilla</label>
                            <div class="col-md-3">
                                @Html.DropDownList("hddlTipoDocumento", (SelectList)ViewBag.TipoDocumento, new { @class = "form-control" })
                            </div>
                        </div>
                        <div id="Parametros">

                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">ARCHIVO</label>
                            <div class="col-md-3">
                                <input type="file" name="fileUploadImp" id="fileUploadImp" accept="application/pdf">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="x_title" style="font-size:14px">
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                    <button id="btnImportar" type="button" class="btn btn-success">Importar</button>
                    <button id="btnCancelar" class="btn btn-primary" type="button">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

